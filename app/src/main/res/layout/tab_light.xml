                android:onClick="light"  />

            <Button
                android:id="@+id/bt_light_5_off"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_off"
                android:onClick="light"  />

            //6

