                android:onClick="light"  />

            //7

            <Button
                android:id="@+id/bt_light_7_on"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_on"
                android:onClick="light"  />

            <Button
                android:id="@+id/bt_light_7_off"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_off"
                android:onClick="light" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>