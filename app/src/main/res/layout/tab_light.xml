<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ALL"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:orientation="horizontal">

            //0

            <Button
                android:id="@+id/bt_light_0_on"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_on"
                android:onClick="light" />

            <Button
                android:id="@+id/bt_light_0_off"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_off"
                android:onClick="light" />

            //1

            <Button
                android:id="@+id/bt_light_1_on"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_on"
                android:onClick="light" />

            <Button
                android:id="@+id/bt_light_1_off"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_off"
                android:onClick="light" />

            //2

            <Button
                android:id="@+id/bt_light_2_on"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_on"
                android:onClick="light"  />

            <Button
                android:id="@+id/bt_light_2_off"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_off"
                android:onClick="light"  />

            //3

            <Button
                android:id="@+id/bt_light_3_on"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_on"
                android:onClick="light"  />

            <Button
                android:id="@+id/bt_light_3_off"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/btn_light_off"
                android:onClick="light"  />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

